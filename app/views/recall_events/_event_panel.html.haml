.panel.panel-default
  .panel-heading
    %i.fa.fa-fw{ class: icon }
    = title
  .panel-body
    - if recall_events.present?
      .list-group
        - recall_events.each do |recall_event|
          = link_to recall_event, class: 'list-group-item' do
            = recall_event.recalling_firm + ' - ' + recall_event.status
            %p
              %span.pull-right.text-muted.small
                %em= "#{recall_event.recall_number} - #{recall_event.report_date}"

      -# %a.btn.btn-default.btn-block{:href => "#"} View All

    - else

      %p None found.
